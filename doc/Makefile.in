@SET_MAKE@

prefix = @prefix@
datarootdir = @datarootdir@
infodir = @infodir@
srcdir = @srcdir@
subdir = doc
top_srcdir = @top_srcdir@

VPATH=$(srcdir)
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_SCRIPT = @INSTALL_SCRIPT@
INSTALL_DATA = @INSTALL_DATA@

RM   = @RM@
LN_S = @LN_S@

MAKEINFO = @MAKEINFO@
EMACSINFO = @EMACS_PROG@ -batch -no-site-file -no-init-file -l texinfmt -f batch-texinfo-format

TEXI2DVI = @TEXI2DVI@
TEXI2PDF = @TEXI2PDF@
DVIPS = @DVIPS@

all: info

info: bbdb.info
dvi: bbdb.dvi
ps: bbdb.ps
pdf: bbdb.pdf
html: bbdb.html

bbdb.info: bbdb.texi
	@if test "x$(MAKEINFO)" = "x" ; then			\
	   $(EMACSINFO) $< ;					\
	 else							\
	   $(MAKEINFO) $< ;					\
	 fi

bbdb.dvi: bbdb.texi
	@if test "x$(TEXI2DVI)" = "x" ; then			\
	   echo "Sorry, no \`texi2dvi' program available." ;	\
	 else							\
	   $(TEXI2DVI) $< ;					\
	 fi

bbdb.ps: bbdb.dvi
	$(DVIPS) -o $@ $<

bbdb.pdf: bbdb.texi
	@if test "x$(TEXI2PDF)" = "x" ; then			\
	   echo "Sorry, no \`texi2pdf' program available." ;	\
	 else							\
	   $(TEXI2PDF) -p $< ;					\
	 fi

bbdb.html: bbdb.texi
	@if test "x$(MAKEINFO)" = "x" ; then			\
	   echo "Sorry, no \`makeinfo' program available." ;	\
	 else							\
	  $(MAKEINFO) --html -o $@ $< ;				\
	 fi

install-info: bbdb.info
	$(INSTALL) -d -m 0755 "$(infodir)/"
	$(INSTALL_DATA) bbdb.info "$(infodir)/"

uninstall:
	$(RM) "$(infodir)/"bbdb.info

.PHONY: mostlyclean clean distclean maintainer-clean infoclean extraclean

## Temp files.
mostlyclean:
	$(RM) *.aux *.log *.toc *.cp *.cps *.fn *.fns *.ky *.kys \
	  *.op *.ops *.pg *.pgs *.tp *.tps *.vr *.vrs

## Products not in the release tarfiles.
clean: mostlyclean
	$(RM) bbdb.dvi bbdb.pdf bbdb.ps
	rm -rf bbdb.html/

distclean: clean

infoclean:
	$(RM) bbdb.info

maintainer-clean: distclean infoclean

extraclean: maintainer-clean
	-$(RM) *~ \#*
